---
import Layout from '../layouts/Layout.astro';
import MainTabular from '../components/MainTabular.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Kusa from '../components/Kusa.astro';

---

<Layout title="Welcome to Astro.">
	<main>
		<Header />
		<Header />
		<MainTabular>
			<Kusa />
		</MainTabular>
		<Footer />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
    p {
        line-height: 1.6;
    }
</style>